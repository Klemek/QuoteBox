<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/quote_spacing_v"
    android:paddingTop="@dimen/quote_spacing_v"
    android:paddingRight="@dimen/quote_spacing_h"
    android:paddingLeft="@dimen/quote_spacing_h">

    <include
        layout="@layout/quote_image_view" />

    <TextView
        android:id="@+id/quote_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:text="quote_name"
        android:textAppearance="@style/QuoteText" />
</LinearLayout>